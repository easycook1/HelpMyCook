<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemaLogin" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/fondorece</item>
    </style>





    <style name="full_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="layout_constraintVertical_weight">100</item>
        <item name="layout_constraintHorizontal_weight">100</item>
    </style>

    <style name="three_quarter_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="layout_constraintVertical_weight">75</item>
        <item name="layout_constraintHorizontal_weight">100</item>
    </style>

    <style name="middle_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="layout_constraintVertical_weight">50</item>
        <item name="layout_constraintHorizontal_weight">100</item>
    </style>

    <style name="one_quarter_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="layout_constraintVertical_weight">25</item>
        <item name="layout_constraintHorizontal_weight">100</item>
    </style>

    <style name="Button_ok">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:text">Â¡LISTO!</item>
        <item name="android:textSize">25sp</item>
        <item name="android:radius">5dp</item>
        <item name="android:fontFamily">@font/komikah</item>
    </style>

    <style name="textView_HMC">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/komikah</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF0036</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/txv_selectCategory</item>
        <item name="layout_constraintVertical_weight">20</item>
        <item name="layout_constraintHorizontal_weight">100</item>
    </style>

    <style name="textView_food">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/komikah</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#FF0036</item>
        <item name="android:layout_marginTop">10sp</item>
    </style>

    <style name="find_food">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:hint">Buscar</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
